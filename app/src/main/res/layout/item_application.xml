<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/bg_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:layout_marginBottom="14dp"
    android:elevation="4dp">

    <!-- Hàng trên: logo + chữ -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|start">

        <!-- Logo -->
        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/a"
            android:scaleType="fitCenter"
            android:layout_marginEnd="12dp"
            android:background="@drawable/bg_circle"/>

        <!-- Block phải: Company + Job -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvCompany"
                android:text="Telegram"
                android:textStyle="bold"

                android:textSize="16sp"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvJobTitle"
                android:text="UI designer"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#222"
                android:layout_marginTop="1dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Dòng kẻ phân cách -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEE"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="6dp"/>

    <!-- Status + View details -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvStatus"
            android:text="Application Submitted"
            android:textColor="#466985"
            android:textSize="14sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_submitted"
            android:drawablePadding="5dp"/>

        <TextView
            android:id="@+id/tvViewDetails"
            android:text="View Details"
            android:textColor="#201874"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_next_arrow"
            android:drawablePadding="2dp"/>
    </LinearLayout>
</LinearLayout>
